{
  "name": "bitSurf",
  "manifest_version": 2,
  "version": "0.1",
  "description": "Seamless micropayments with Bitcoin.",
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-2.0.3.js","detectactions.js"]
    }
  ],
  "permissions": [
    "storage",
    "background",
    "http://*/*", 
    "https://*/*"
  ],
  "icons": {"128": "other_icon.png"},
  "browser_action": {
    "default_icon": "toolbar_icon.png",
	"default_popup": "welcome.html"
  }
}